{% extends "formBase.jinja2" %}

{% block content %}
<nav class="navbar navbar-expand-lg navbar-light bg-light">
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
            aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">

        <div class="btn-group">
            <button class="btn btn-light btn-sm btn-dropdown" type="button" data-toggle="dropdown"
                    aria-haspopup="true" aria-expanded="false">
                {{ CURRENT_LANGUAGE }}
                <img style="width: 1rem" src="../static/assets/images/{{ CURRENT_LANGUAGE }}.svg"
                     alt="{{ CURRENT_LANGUAGE }} flag">
            </button>

            <div class="dropdown-menu">
                {# hehe, dirty shit ako keby to pisal prvak tu nebudeme tolerovat#}
                {% for language in AVAILABLE_LANGUAGES.items() %}
                    {% if CURRENT_LANGUAGE == language[0] %}
                        <span class="dropdown-item">{{ language[1] }}
                        <img style="width: 1rem" src="../static/assets/images/{{ language[0] }}.svg"
                             alt="{{ language[1] }} flag"> </span>
                    {% else %}
                        <a href="{{ url_for('user.set_language', language=language[0]) }}"
                           class="dropdown-item">{{ language[1] }}
                        <img style="width: 1rem" src="../static/assets/images/{{ language[0] }}.svg"
                             alt="{{ language[1] }} flag"> </a>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</nav>

    <form id="login-form" class="form" action="" method="post">
        <h3 class="text-center text-info">{{ _('Prihlásenie') }}</h3>
        <div class="form-group">
            {{ form.email.label(class_="text-info") }}
            {{ form.email(class_="form-control") }}
            {% if form.email.errors %}
                <ul class="errors">
                    {% for error in form.email.errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
        <div class="form-group">
            {{ form.password.label(class_="text-info") }}
            {{ form.password(class_="form-control") }}
            {% if form.password.errors %}
                <ul class="errors">
                    {% for error in form.password.errors %}
                        <li>{{ error }}</li>
                    {% endfor %}
                </ul>
            {% endif %}
        </div>
        <div class="form-check">
            {{ form.remember(class_="form-check-input") }}
            {{ form.remember.label(class_="text-info form-check-label") }}
        </div>
        <div class="form-group d-flex pt-2 pb-2 link-container">
            <input type="submit" name="submit" class="btn btn-info btn-md" value={{ _('Prihlásiť sa') }}>
            <a href="/register" class="link text-info">{{ _('Ešte nemáte účet?') }}</a>
        </div>
    </form>

{% endblock %}